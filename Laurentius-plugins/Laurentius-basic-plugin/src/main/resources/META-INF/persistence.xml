<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="ebMS_PLG_BASIC_PU" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:/dsEBMS_SED</jta-data-source>
        <mapping-file>shared/hbm/plg_imp_export.hbm.xml</mapping-file>
        
        <properties>
            <property name="hibernate.dialect" value="${si.laurentius.msh.hibernate.dialect}" />
            <property name="hibernate.hbm2ddl.auto" value="${si.laurentius.msh.hibernate.hbm2ddl.auto}" />
        </properties>
    </persistence-unit>
   
</persistence>
