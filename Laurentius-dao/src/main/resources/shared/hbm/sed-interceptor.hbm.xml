<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    
    <class name="si.laurentius.interceptor.SEDInterceptorRule"
           table="LAU_INTERCEPTOR_RULE">
        <id name="Id" type="java.math.BigInteger" >
            <column name="ID" scale="0" />
            <generator class="sequence">
                <param name="sequence">SEQ_LAU_INTERCEPTOR_RULE</param>
            </generator>
        </id>
        <property column="NAME" name="Name"  length="128" type="java.lang.String"/>
        <property column="ACTIVE" name="Active"   type="java.lang.Boolean"/>
        <property column="INTERCEPT_EVENT" name="InterceptEvent"  length="64" type="java.lang.String"/>
        <property column="SERVICE" name="Service"  length="256" type="java.lang.String" />
        <property column="ACTION" name="Action"  length="256" type="java.lang.String" />
        <property column="RECEIVER_EBOX" name="ReceiverEBox"  length="128" type="java.lang.String" />
        <property column="SENDER_EBOX" name="SenderEBox"  length="128" type="java.lang.String" />
        
        <component name="SEDInterceptorInstance" class="si.laurentius.interceptor.SEDInterceptorInstance">
            <property column="INTERCEPTOR_TYPE" name="Type"  length="64" type="java.lang.String"/>
            <property column="INTERCEPTOR_PLUGIN" name="Plugin"  length="64" type="java.lang.String"/>
            <property column="INTERCEPTOR_PLUGIN_VERSION" name="PluginVersion"  length="32" type="java.lang.String"/>
            <bag name="sedInterceptorProperties"  access="field" cascade="all, delete-orphan" lazy="false" order-by="Id asc" >
                <key not-null="true">
                    <column name="INTERCEPTOR_INSTANCE_ID" scale="0" />
                </key>
                <one-to-many class="si.laurentius.interceptor.SEDInterceptorProperty" />
            </bag>
        </component>
        
    </class>    
    
    <class name="si.laurentius.interceptor.SEDInterceptorProperty" table="LAU_INTERC_INST_PROPERTY">
        <id name="Id" type="java.math.BigInteger">
            <column name="ID" scale="0" />
            <generator class="sequence">
                <param name="sequence">SEQ_LAU_INTERC_INST_PROP</param>                
            </generator>
        </id>		
        <property column="INTC_PROP_KEY" name="Key" type="java.lang.String"  length="64" /> 
        <property column="INTC_PROP_VALUE" name="Value" type="java.lang.String" length="512" />         
    </class>
    
    <query name="si.laurentius.interceptor.SEDInterceptorRule.getById" ><![CDATA[SELECT p FROM SEDInterceptorRule p WHERE p.Id = :id]]></query>     
    <query name="si.laurentius.interceptor.SEDInterceptorRule.getAll" ><![CDATA[SELECT p FROM SEDInterceptorRule p order by id asc]]></query>
    

</hibernate-mapping>