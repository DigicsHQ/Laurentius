<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>    
    <class name="si.laurentius.cert.crl.SEDCertCRL"
           table="LAU_CERT_CRL">
        <id name="Id" type="java.math.BigInteger" >
            <column name="ID" scale="0" />
            <generator class="sequence">
                <param name="sequence">SEQ_LAU_CERT_CRL</param>
            </generator>
        </id>        
        <property column="ISSUER_DN" name="IssuerDN" length="128"  type="java.lang.String" />       
        <property column="HTTP" name="Http"  length="512" type="java.lang.String" />       
        <property column="LDAP" name="Ldap"  length="512" type="java.lang.String" />       
        <property column="FILE_PATH" name="FilePath"  length="512" type="java.lang.String" />       
        <property column="EFFECTIVE_DATE" name="EffectiveDate"  type="java.util.Date" />       
        <property column="NEXT_UPDATE_DATE" name="NextUpdateDate"  type="java.util.Date" /> 
        <property column="RETRIEVE_DATE" name="RetrievedDate"  type="java.util.Date" /> 
    </class>    
    <query name="si.laurentius.cert.crl.SEDCertCRL.getAll" ><![CDATA[SELECT p FROM SEDCertCRL p]]></query>
</hibernate-mapping>